@model AppMVC.Models.CLIENTES

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm("Modificar", "Customer", FormMethod.Post, new { 
    @class = "formhorizontal", 
    role = "form" 
}))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CLIENTES</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codcli)

        @Html.HiddenFor(model => model.nomcli)

        @Html.HiddenFor(model => model.dircli)

        @Html.HiddenFor(model => model.numtel)

        @Html.HiddenFor(model => model.correo)

        @Html.HiddenFor(model => model.edad)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
